# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# TTS Configuration  
TTS_PROVIDER=openai  # openai or qwen (qwen runs locally, no API key needed)
TTS_VOICE=alloy  # For OpenAI: alloy, echo, fable, onyx, nova, shimmer; For Qwen: aiden, dylan, eric, ono_anna, ryan, serena, sohee, uncle_fu, vivian
TTS_SPEED=1.0

# STT Configuration
STT_PROVIDER=openai
STT_MODEL=whisper-1
STT_LANGUAGE=en

# Application Settings
MAX_SLIDES=100
AUDIO_FORMAT=mp3
PRESENTATION_MODE=auto
TEST_MODE=true
